<Window x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.LoginPages.FFIDInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.LoginPages"
        mc:Ignorable="d"
        Title="VCS - FFID Information" Height="500" Width="450"
        ResizeMode="NoResize">
    <Grid DataContext="{Binding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,10,0,0"
            TextAlignment="Center"
            Style="{StaticResource MaterialDesignHeadline5TextBlock}"
            Text="First Fleet Identification Codes"
        />
        <ListView
            Grid.Row="1"
            ItemsSource="{Binding Units}"
        >
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="300"
                        DisplayMemberBinding="{Binding Name}"
                        Header="Unit Name" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Code}"
                        Header="Code" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
