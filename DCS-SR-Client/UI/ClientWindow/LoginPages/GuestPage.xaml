<Page
    Height="340"
    Title="GuestPage"
    Width="600"
    d:DesignHeight="340"
    d:DesignWidth="600"
    mc:Ignorable="d"
    x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.LoginPages.GuestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.LoginPages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid KeyDown="OnButtonPressed">
        <Grid.Background>
            <SolidColorBrush Color="White" />
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="240" />
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Bottom">
            <Label
                Content="Vanguard Communications System"
                FontSize="24"
                FontWeight="Heavy"
                HorizontalAlignment="Center"
                Margin="0,0,0,-13" />
            <Label
                Content="powered by SRS"
                FontSize="16"
                HorizontalAlignment="Center" />
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1" Margin="-80,-20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="38" />
                <RowDefinition Height="20" />
                <RowDefinition Height="38" />
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="1"
                Height="38"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                VerticalAlignment="Top">
                <TextBox
                    AcceptsReturn="False"
                    FontSize="16"
                    Height="38"
                    HorizontalAlignment="Center"
                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                    Margin="0,0,50,0"
                    Name="IpInput"
                    Padding="7"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Top"
                    Width="200"
                    materialDesign:HintAssist.Hint="IP Address" />

                <PasswordBox
                    FontSize="16"
                    Height="38"
                    HorizontalAlignment="Center"
                    Name="PasswordInput"
                    Padding="8"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                    VerticalAlignment="Top"
                    Width="200"
                    materialDesign:HintAssist.Hint="Password" />
            </StackPanel>

            <Grid
                Grid.Row="3"
                Height="38"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                
                
                <StackPanel 
                    Grid.Column="0"
                    Height="38"
                    Orientation="Horizontal">
                    
                    <Button
                        Margin="27,0,5,0"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        ToolTip="MaterialDesignIconForegroundButton"
                        Height="38"
                        Width="38"
                        Click="ButtonBase_OnClick"
                    >
                        <materialDesign:PackIcon Kind="CrosshairsQuestion" Height="38" Width="38" />
                    </Button>
                    
                    <TextBox
                        AcceptsReturn="False"
                        FontSize="16"
                        Height="38"
                        HorizontalAlignment="Center"
                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                        Margin="0,0,0,0"
                        Name="FleetCodeInput"
                        Padding="8"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="NoWrap"
                        VerticalAlignment="Top"
                        Width="130"
                        materialDesign:HintAssist.Hint="Fleet ID Code" />
                </StackPanel>

                <TextBox
                    Grid.Column="2"
                    AcceptsReturn="False"
                    FontSize="16"
                    Height="38"
                    HorizontalAlignment="Center"
                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                    Name="PlayerNameInput"
                    Padding="8"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Top"
                    Width="200"
                    materialDesign:HintAssist.Hint="Player Name" />
            </Grid>

            <StackPanel
                Grid.Row="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Click="Login_OnClick"
                    Content="LOGIN"
                    Height="30"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Margin="50,0,0,0"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    Width="90"
                    materialDesign:ButtonAssist.CornerRadius="15"
                    x:Name="Login" />
                <ProgressBar
                    Height="30"
                    IsIndeterminate="True"
                    Margin="20,0,0,0"
                    Name="LoginInProgress"
                    Opacity="0"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Value="0"
                    Width="30" />
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Column="0"
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Button
                Click="Back_OnClick"
                Content="Back"
                Height="30"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Margin="10,0,0,0"
                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                Width="70"
                VerticalAlignment="Top"
                materialDesign:ButtonAssist.CornerRadius="15"
                x:Name="Back" />
        </StackPanel>
    </Grid>
</Page>
