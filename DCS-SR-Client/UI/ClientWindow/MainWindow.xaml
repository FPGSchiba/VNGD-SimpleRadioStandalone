                                Stretch="Uniform"
                                UseLayoutRounding="False" />
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Button x:Name="StartStop"
                                Width="125"
                                Margin="0,10,20,0"
                                HorizontalAlignment="Center"
                                Command="{Binding Path=ConnectCommand}"
                                Content="Connect"
                                Style="{DynamicResource SquareButtonStyle}" />
