                                Width="125"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center"
                                Click="ShowAwacsOverlay_OnClick"
                                Content="Toggle AWACS Overlay"
                                Style="{DynamicResource SquareButtonStyle}" />
                    </StackPanel>

                    <StackPanel Margin="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
