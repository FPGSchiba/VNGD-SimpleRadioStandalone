<UserControl
    Height="20"
    Name="RadioControlContainerSwitch"
    Width="180"
    x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.AwacsRadioOverlayWindow.RadioControlGroupSwitch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:presetChannels="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.RadioOverlayWindow.PresetChannels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <StackPanel
        Background="Transparent"
        HorizontalAlignment="Left"
        Orientation="Horizontal"
        SnapsToDevicePixels="True"
        VerticalAlignment="Center">
        <Button
            Background="IndianRed"
            Click="ToggleSwitch_Click"
            FontSize="5"
            Foreground="Black"
            Height="10"
            HorizontalAlignment="Center"
            IsEnabled="False"
            Margin="1,0,0,0"
            Name="RadioEnabled"
            Opacity="1"
            Padding="0"
            Style="{StaticResource DarkStyle-Button}"
            Width="15" >
            <Button.Content>
                <TextBlock Text="Off" FontSize="5" />
            </Button.Content>
        </Button>
        <!--<Button
             Background="DarkGray"
             Click="ToggleChannel_Click"
             Opacity="1"
             FontSize="5"
             FontWeight="Black"
             Foreground="Black"
             Height="10"
             IsEnabled="False"
             Margin="1,0,0,0"
             Name="ChannelEnabled"
             Style="{StaticResource DarkStyle-Button}"
             Width="10">
            <Button.Content>
                <Grid Width="10" Height="10">
                    <TextBlock
                       Name="ChannelEnableText"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="10"
                       Padding="2,1.5,6,8"
                       Text="»" />
                </Grid>
            </Button.Content>
        </Button>-->
        <TextBlock
            Background="Transparent"
            FontSize="8"
            Foreground="#00FF00"
            Height="10"
            HorizontalAlignment="Center"
            Margin="0,0,0,0"
            Padding="0"
            Style="{x:Null}"
            Text="Radio 10"
            TextWrapping="NoWrap"
            VerticalAlignment="Center"
            Width="33"
            x:Name="RadioLabel">
            <Border BorderBrush="Black" BorderThickness="0" />
        </TextBlock>




        <!--  Active Radio  -->
        <StackPanel
            Margin="1,0,0,0"
            Name="RadioStackGroup"
            Orientation="Vertical">
            <StackPanel
                Background="Black"
                Height="10"
                Margin="0,0,0,0"
                Name="RadioTextGroup"
                Orientation="Horizontal">
                <presetChannels:PresetChannelsViewTransparent1
                    Background="#444"
                    DataContext="{Binding ChannelViewModel, Mode=TwoWay}"
                    HorizontalAlignment="Center"
                    Width="12"
                    x:Name="PresetChannelsView" />
                <TextBox
                    Background="Black"
                    BorderBrush="Black"
                    BorderThickness="0"
                    FontSize="8"
                    Foreground="#00FF00"
                    Height="10"
                    HorizontalAlignment="Left"
                    HorizontalScrollBarVisibility="Disabled"
                    MouseDown="RadioFrequencyText_Click"
                    MouseRightButtonDown="RadioFrequencyText_RightClick"
                    Padding="0"
                    PreviewMouseWheel="RadioFrequencyText_MouseWheel"
                    Style="{x:Null}"
                    Text="000.000"
                    TextAlignment="Center"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Center"
                    VerticalScrollBarVisibility="Disabled"
                    Visibility="Visible"
                    Width="30"
                    x:Name="RadioFrequency" />
                <TextBlock
                    Background="Black"
                    FontSize="8"
                    Foreground="#00FF00"
                    Height="10"
                    HorizontalAlignment="Center"
                    MouseDown="RadioFrequencyText_Click"
                    MouseRightButtonDown="RadioFrequencyText_RightClick"
                    Padding="0"
                    Style="{x:Null}"
                    Text="AM 👤10"
                    TextAlignment="Center"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Center"
                    Visibility="Visible"
                    Width="35"
                    x:Name="RadioMetaData">
                    <Border BorderBrush="Black" BorderThickness="0" />
                </TextBlock>
                <TextBlock
                    Background="Black"
                    FontSize="8"
                    Foreground="#00FF00"
                    Height="10"
                    HorizontalAlignment="Center"
                    Style="{x:Null}"
                    Text="USER"
                    TextAlignment="Center"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Width="65"
                    x:Name="TransmitterName" />
                <Ellipse
                    Fill="#FF9900"
                    Height="10"
                    HorizontalAlignment="Right"
                    Margin="1,0,0,0"
                    MouseDown="RadioSelectSwitch"
                    Stroke="Black"
                    Style="{x:Null}"
                    ToolTip="Selected Radio"
                    VerticalAlignment="Center"
                    Width="10"
                    x:Name="RadioActive" />
            </StackPanel>

            <!--  Standby Radio- Added by Dabble  -->

            <StackPanel
                Background="Black"
                Height="10"
                Margin="0,0,0,0"
                Name="RadioTextGroupStandby"
                Orientation="Horizontal">
                <presetChannels:PresetChannelsViewTransparent1
                    Background="#444"
                    DataContext="{Binding StandbyChannelViewModel, Mode=TwoWay}"
                    HorizontalAlignment="Center"
                    Width="12"
                    x:Name="StandbyPresetChannelsView" />
                <TextBox
                    Background="Black"
                    BorderBrush="Black"
                    BorderThickness="0"
                    FontSize="8"
                    Foreground="#003b00"
                    Height="10"
                    HorizontalAlignment="Left"
                    HorizontalScrollBarVisibility="Disabled"
                    MouseDown="StandbyRadioFrequencyText_Click"
                    MouseRightButtonDown="StandbyRadioFrequencyText_RightClick"
                    Padding="0"
                    PreviewMouseWheel="RadioFrequencyText_MouseWheel"
                    Style="{x:Null}"
                    Text="000.000"
                    TextAlignment="Center"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Center"
                    VerticalScrollBarVisibility="Disabled"
                    Visibility="Visible"
                    Width="30"
                    x:Name="StandbyRadioFrequency" />
                <TextBlock
                    Background="Black"
                    FontSize="8"
                    Foreground="#003b00"
                    Height="10"
                    HorizontalAlignment="Center"
                    MouseDown="RadioFrequencyText_Click"
                    MouseRightButtonDown="RadioFrequencyText_RightClick"
                    Padding="0"
                    Style="{x:Null}"
                    Text="AM 👤10"
                    TextAlignment="Center"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Center"
                    Visibility="Visible"
                    Width="35"
                    x:Name="StandbyRadioMetaData">
                    <Border BorderBrush="Black" BorderThickness="0" />
                </TextBlock>
                <Button
                    Background="Gray"
                    Click="SwapStandbyFrequency_Click"
                    FontSize="5"
                    FontWeight="Light"
                    Foreground="Black"
                    Height="10"
                    HorizontalAlignment="Center"
                    IsEnabled="True"
                    Margin="1,0,0,0"
                    Name="SwapRadio"
                    Opacity="1"
                    Padding="0"
                    Style="{StaticResource DarkStyle-Button}"
                    Width="10" >
                    <Button.Content>
                        <TextBlock Text="S" FontSize="5" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>

        <Viewbox DockPanel.Dock="Right" Stretch="Fill">
            <Slider
                Height="20"
                IsEnabled="False"
                Margin="3,2,0,0"
                Maximum="100"
                Style="{x:Null}"
                Thumb.DragCompleted="RadioVolume_DragCompleted"
                Thumb.DragStarted="RadioVolume_DragStarted"
                Width="40"
                x:Name="RadioVolume" />
        </Viewbox>

        <!--  NEED TO ADD THIS LOGIC - Dabble  -->

        <Button
            Background="IndianRed"
            Click="ToggleSwitch_Click"
            Content="G"
            FontSize="5"
            FontWeight="Black"
            Foreground="Black"
            Height="10"
            HorizontalAlignment="Center"
            Visibility="Hidden"
            IsEnabled="False"
            Margin="1,0,0,0"
            Name="ToggleGroupManageRadio"
            Opacity="1"
            Padding="0"
            Style="{StaticResource DarkStyle-Button}"
            Width="10" />
    </StackPanel>
</UserControl>